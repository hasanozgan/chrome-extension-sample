{
  "name": "Loowatcher Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "",
  "homepage_url": "http://loowatch.herokuapp.com",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "default_locale": "en",
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  }
}
